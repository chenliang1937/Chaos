<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12">

        <ImageView
            android:id="@+id/navitem1_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_car_purple"/>

        <ImageView
            android:id="@+id/navitem1_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@+id/navitem1_icon"
            android:src="@mipmap/dir_start"/>

        <TextView
            android:id="@+id/navitem2_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/navitem1_dir"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_3"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color"
            android:text="出发"/>

    </RelativeLayout>

</RelativeLayout>